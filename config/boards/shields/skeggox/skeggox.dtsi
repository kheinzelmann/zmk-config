#include <dt-bindings/zmk/matrix_transform.h>
#include "skeggox-layout.dtsi"

&split_skeggox_layout {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
	zmk,physical_layout = &split_skeggox_layout;
        // zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
//             | SW01  | SW02  | SW03  | SW04  | SW05  |  | SW05  | SW04  | SW03  | SW02  | SW01  |
//             | SW06  | SW07  | SW08  | SW09  | SW10  |  | SW10  | SW09  | SW08  | SW07  | SW06  | 
//             | SW11  | SW12  | SW13  | SW14  | SW15  |  | SW15  | SW14  | SW13  | SW12  | SW11  |
//                             | SW17  | SW18  | SW19  |  | SW19  | SW18  | SW17  | 
        map = <
                RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)    RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
                RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)    RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
                RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)    RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                                RC(3,2) RC(3,3) RC(3,4)    RC(3,5) RC(3,6) RC(3,7)         
        >;
    };

    kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		diode-direction = "col2row";
		wakeup-source;
    };


    // peripheral, right hand
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        tpoint_peripheral: tpoint_peripheral@0 { compatible = "zmk,input-split"; reg = <0>; };
    };

    tpoint_peripheral_listener: tpoint_peripheral_listener {
        compatible = "zmk,input-listener";
        device = <&tpoint_peripheral>;
	status = "disabled";
    };

    // central, left hand
    // #include <input/processors.dtsi>
    // #include <dt-bindings/zmk/input_transform.h>
    // #include <zephyr/dt-bindings/input/input-event-codes.h>

    tpoint_central_listener: tpoint_central_listener {
        compatible = "zmk,input-listener";
	status = "disabled";
        /*
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>,<&zip_xy_scaler 0 1>;
        scroller {
            layers = <10>;
            //process-next;
            input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>,<&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>,<&zip_xy_scaler 1 8>,<&zip_xy_to_scroll_mapper>;
        };
        mouse {
            layers = <9>;
            input-processors = 
            <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>
            //, <&zip_temp_layer 9 500>
            ;
        };
        */
    };
};

